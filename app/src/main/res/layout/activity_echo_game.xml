<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EchoGameActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideH50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideV50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/red_normal"
        app:layout_constraintBottom_toTopOf="@+id/guideH50"
        app:layout_constraintEnd_toStartOf="@+id/guideV50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/green_normal"
        app:layout_constraintBottom_toTopOf="@+id/guideH50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideV50"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideV50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideH50" />

    <Button
        android:id="@+id/buttonYellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideV50"
        app:layout_constraintTop_toTopOf="@+id/guideH50" />

    <ImageView
        android:id="@+id/imageSubdueAll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/button_overlay"
        android:elevation="4dp"
        android:src="@drawable/overlay_subdue_all"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageRedFlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/button_overlay"
        android:elevation="8dp"
        android:src="@drawable/overlay_red_flash"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageGreenFlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/button_overlay"
        android:elevation="8dp"
        android:src="@drawable/overlay_green_flash"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBlueFlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/button_overlay"
        android:elevation="8dp"
        android:src="@drawable/overlay_blue_flash"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageYellowFlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/button_overlay"
        android:elevation="8dp"
        android:src="@drawable/overlay_yellow_flash"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>