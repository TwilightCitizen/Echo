<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/red_normal"/>

                    <size
                        android:width="48dp"
                        android:height="48dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/icon_start_game" />
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/red_flash"/>

                    <size
                        android:width="48dp"
                        android:height="48dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/icon_start_game" />
        </layer-list>
    </item>
</selector>